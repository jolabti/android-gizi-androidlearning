<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lutfi.menuprogram.Menu1"
    android:background="#72a8f3">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seputar gizi"
        android:id="@+id/btnseputar"
        android:layout_alignTop="@+id/btnkalgizi"
        android:textColor="#e40d18"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btndatgizi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kalkulator gizi"
        android:id="@+id/btnkalgizi"
        android:layout_marginBottom="104dp"
        android:layout_above="@+id/btndatgizi"
        android:layout_alignEnd="@+id/btnkembali"
        android:textColor="#e40d18" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data gizi"
        android:id="@+id/btndatgizi"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#e40d18" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bantuan"
        android:id="@+id/btnbantuan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="keluar"
        android:id="@+id/btnkembali"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
